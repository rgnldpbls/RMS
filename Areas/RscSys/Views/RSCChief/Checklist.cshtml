                    foreach (var appType in Model)
                    {
                        foreach (var subCategory in appType.ApplicationSubCategories)
                        {
                            <tr>
                                @* <td>@subCategory.CategoryId</td> *@
                                <td>@appType.ApplicationTypeName</td>
