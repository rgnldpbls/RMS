@using System.Security.Claims
@model IEnumerable<rscSys_final.Models.Evaluator>   

@{
    ViewData["Title"] = "Manage Evaluators";
    Layout = "_LayoutCPages";
}
<style>
    .table-header th{
        background-color: #850000;
        color: white;
    }

    .status-active {
        background-color: #28a745;
        color: white;
        padding: 5px 10px;
        border-radius: 15px;
    }

    .status-inactive {
        background-color: #6c757d;
        color: white;
        padding: 5px 10px;
        border-radius: 15px;
    }

    .evaltitle h2 {
        font-weight: 700;
    }
</style>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3 evaltitle">
            <h2>Manage Evaluators</h2>
            <button class="btn btn-outline-dark">
                <i class="fas fa-filter"></i>
            </button>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="table-header">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Specialization</th>
                        <th>Type</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var evaluator in Model)
                {
                    <tr>
                        @* <td>@($"{evaluator.User.FirstName} {evaluator.User.LastName}")</td>
                        <td>@evaluator.User.Email</td> *@
                        <td>@evaluator.Specialization</td>
                        <td>@* @(evaluator.IsInternal ? "Internal" : "External") *@</td> <!-- Assuming you have an IsInternal property -->
                        <td>
                            @* <span class="@(evaluator.IsActive ? "status-active" : "status-inactive")">
                                @(evaluator.IsActive ? "Active" : "Inactive")
                            </span> *@
                        </td>
                        <td class="">
                            <button class="btn btn-sm btn-outline-dark me-1 mb-1"> <i class="fas fa-eye"></i> View Evaluator</button> <br/>
                            <button class="btn btn-sm btn-outline-dark"> <i class="fas fa-user"></i> Edit Evaluator</button>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
