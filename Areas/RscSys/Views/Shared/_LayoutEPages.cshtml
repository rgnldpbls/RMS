@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Research Management Office</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/RSCEvaluatorPages.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ResearchManagementSystem.styles.css" asp-append-version="true" />
    <link href="~/font-awesome/css/all.css" rel="stylesheet"/>

    <link rel="icon" href="~/images/rmo.ico" type="image/x-icon" />

    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Poppins:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3 navbar-custom">
            <div class="container-fluid">
                <a class="btn" data-bs-toggle="offcanvas" href="#sidebar" role="button" aria-controls="sidebar">
                    <i class="fa-solid fa-bars fa-xl" style="color: #ffffff;"></i>
                </a>
                <a class="navbar-brand" asp-area="RscSys" asp-controller="RSCEvaluator" asp-action="Index">
                    <img src="~/images/rmo.png" alt="Logo" width="50" height="auto" class="d-inline-block align-text-top">           
                </a>
                <div class="research-management-office d-none d-sm-block">
                    Research Management Office <br />
                    <div class="polytechnic-university">
                        Polytechnic University of the Philippines
                    </div>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="RscSys" asp-controller="RSCEvaluator" asp-action="Index" data-page="home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="RscSys" asp-controller="RSCEvaluator" asp-action="Applications" data-page="applications">Applications</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="RscSys" asp-controller="RSCEvaluator" asp-action="UpdateSpecialization" asp-route-evaluatorId="@User.FindFirstValue(ClaimTypes.NameIdentifier)" data-page="UpdateEvaluation">Update Specialization</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="RscSys" asp-controller="RSCEvaluator" asp-action="EvMemo" data-page="EvMemo">Memoranda / Executive Orders</a>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center">
                        <!-- Role Switching Dropdown -->
                        @if (User.IsInRole("Faculty") || User.IsInRole("RSC Chief") || User.IsInRole("RSC Evaluator"))
                        {
                            <div class="dropdown" style="display:inline;">
                                <button class="btn btn-outline-light dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Evaluator
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">                           
                                    @if (User.IsInRole("RSC Chief"))
                                    {
                                        <a class="dropdown-item" href="@Url.Action("Index", "RSCChief")">Switch As Chief</a>
                                    }
                                    @if (User.IsInRole("Faculty"))
                                    {
                                        <a class="dropdown-item" href="@Url.Action("Index", "RSCResearcher")">Switch As Researcher</a>
                                    }
                                    else
                                    {
                                        <a class="dropdown-item">No Roles Available</a>
                                    }
                                </div>
                            </div>
                        }

                        <button class="btn me-1 position-relative" type="button">
                            <a asp-area="RscSys" asp-controller="RSCEvaluator" asp-action="Notifications">
                                <i class="fa-solid fa-bell fa-2xl" style="color: #ffffff;"></i>
                            </a>
                            @if (ViewBag.UnreadNotificationsCount > 0)
                            {
                                <span class="position-absolute top-0 start-75 translate-middle badge rounded-pill bg-danger">
                                    @ViewBag.UnreadNotificationsCount
                                    <span class="visually-hidden">unread notification</span>
                                </span>
                            }
                        </button>
                        <div class="dropdown">
                            <button class="btn me-1" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa-solid fa-circle-user fa-2xl" style="color: #ffffff;"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="@Url.Action("ViewProfile", "Account")">View Profile</a></li>
                                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <li><button id="logout" type="submit" class="dropdown-item">Logout</button></li>
                                </form>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="offcanvas offcanvas-start sidebar" tabindex="-1" id="sidebar" aria-labelledby="sidebarLabel">
        <a class="text-dark text-decoration-none" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
            <div class="profile-section d-block text-center">

                <img src="~/images/profile.png" alt="User Profile" class="profile-image w-50 d-block mx-auto mb-2">

                <!-- Clickable Hello, [Username] link -->

                <p class="user-email my-0 fs-6 fw-light text-white">Hello, @User.Identity?.Name!</p>
            </div>
        </a>


        <div class="menu-section">
            <ul>
                <li class="sideitemz p-2 rounded-2"><a class="text-white text-decoration-none" asp-area="" asp-controller="AddFAQs" asp-action="Index"><i class="fa-solid fa-person-circle-question fa-2xl me-3" style="color: #ffffff;"></i><span class="ms-2">FAQs</span></a></li>
                <li class="sideitemz p-2 rounded-2"><a class="text-white text-decoration-none" asp-area="" asp-controller="Faculty" asp-action="FacultyRateUs"><i class="fa-solid fa-star fa-2xl me-3" style="color: #ffffff;"></i><span class="ms-2">Rate Us</span></a></li>
                <li class="sideitemz p-2 rounded-2"><a class="text-white text-decoration-none" asp-area="" asp-controller="Faculty" asp-action="FacultyReportGenerateReport"><i class="fa-solid fa-file-export fa-2xl me-3" style="color: #ffffff;"></i><span class="ms-2">Report</span></a></li>
                <li class="sideitemz p-2 rounded-2"><a class="text-white text-decoration-none" asp-area="" asp-controller="Faculty" asp-action="FacultyAbout"><i class="fa-solid fa-circle-info fa-2xl me-3" style="color: #ffffff;"></i><span class="ms-2">About</span></a></li>
            </ul>
        </div>

        <div class="logout-section mt-3">
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="logout-button btn btn-link text-white w-100">
                    <i class="fa-solid fa-right-from-bracket fa-2xl me-3" style="color: #ffffff;"></i> Log Out
                </button>
            </form>
        </div>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
