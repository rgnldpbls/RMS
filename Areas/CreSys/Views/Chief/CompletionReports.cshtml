@model IEnumerable<ResearchManagementSystem.Areas.CreSys.ViewModels.CompletionReportViewModel>

@{
    ViewData["Title"] = "Completion Reports";
}
<head>
    <link rel="stylesheet" href="~/css/CompletionReport.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" asp-append-version="true" />
</head>
<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-bordered table-striped mt-3">
                <thead>
                    <tr>
                        <th>UREC No</th>
                        <th>Research Title</th>
                        <th>College</th>
                        <th>Completion Report Status</th>
                        <th>Completion Certificate Status</th>
                        <th>Research Start Date</th>
                        <th>Research End Date</th>
                        <th>Issued Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var report in Model)
                    {
                        <tr>
                            <td>@report.EthicsApplication.UrecNo</td>
                            <td>@report.NonFundedResearchInfo.Title</td>
                            <td>@report.NonFundedResearchInfo.College</td>
                            <td>Terminal Report Submitted</td>
                            <td>
                                @if (report.CompletionCertificate != null)
                                {
                                    @report.EthicsApplication.EthicsApplicationLogs.LastOrDefault().Status
                                }
                                else
                                {
                                    <span class="text-warning">Not Issued</span>
                                }
                            </td>
                            <td>@report.CompletionReport.ResearchStartDate.ToShortDateString()</td>
                            <td>@report.CompletionReport.ResearchEndDate?.ToShortDateString()</td>
                            <td>
                                @if (report.CompletionCertificate != null)
                                {
                                    @report.CompletionCertificate.IssuedDate.ToShortDateString()
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </td>
                            <td>
                                @* You can add a button for issuing certificates, updating status, etc. *@
                                @if (report.CompletionCertificate == null)
                                {
                                    <a href="@Url.Action("GetCompletionReport", "Chief", new { urecNo = report.EthicsApplication.UrecNo })" class="btn btn-success btn-sm">
                                        Issue Certificate
                                    </a>
                                }
                                else
                                {
                                    @* If the certificate is already issued, show a button to view the certificate *@
                                    <a href="@Url.Action("ViewCertificateFile", "Researcher", new { urecNo = report.EthicsApplication.UrecNo })" class="btn btn-primary btn-sm">
                                        View Certificate
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">No completion reports found.</div>
    }
</div>
