@model ResearchManagementSystem.Areas.CreSys.Models.EthicsMemoranda
@{
    ViewData["Title"] = "Memo Edit";
}

<head>
    <link rel="stylesheet" href="~/css/InitialReview.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" asp-append-version="true" />
</head>
<style>
    .custom-btn {
        background-color: maroon;
        border: none;
        color: white;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 5px;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

        .custom-btn:hover {
            background-color: #8b0000;
            transform: scale(1.05);
        }
</style>
<div class="container mt-5">
    <a href="javascript:history.back()" class="btn btn-primary custom-btn">
        <i class="fas fa-arrow-left"></i> Go Back
    </a>
    <h3 class="text-center mb-4">Edit Memorandum</h3>
    <div class="card shadow-lg custom-card">
        <div class="card-header custom-header">
            <h5 class="text-center">Edit Memo Details</h5>
        </div>
        <div class="card-body">
            <form asp-action="EditMemo" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="MemoId" />

                <div class="form-group mb-3">
                    <label for="memoNumber" class="form-label">
                        <i class="fas fa-hashtag"></i> Memo Number
                    </label>
                    <input type="text" class="form-control" id="memoNumber" name="memoNumber" value="@Model.MemoNumber" readonly required />
                </div>

                <div class="form-group mb-3">
                    <label for="memoName" class="form-label">
                        <i class="fas fa-file-alt"></i> Memo Name
                    </label>
                    <input type="text" class="form-control" id="memoName" name="memoName" value="@Model.MemoName" placeholder="Enter memo name (optional)" />
                </div>

                <div class="form-group mb-3">
                    <label for="memoDescription" class="form-label">
                        <i class="fas fa-align-left"></i> Memo Description
                    </label>
                    <textarea class="form-control" id="memoDescription" name="memoDescription" placeholder="Enter a brief description" rows="5" required>@Model.MemoDescription</textarea>
                </div>

                <div class="form-group mb-4">
                    <label for="uploadedFile" class="form-label">
                        <i class="fas fa-upload"></i> Upload New File (Optional)
                    </label>
                    <input type="file" class="form-control" id="uploadedFile" name="uploadedFile" />
                    <small class="form-text text-muted">You can upload a new file if needed. Otherwise, the current file remains unchanged.</small>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary custom-btn">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
        <div class="card-footer text-center">
            <small class="text-muted">Ensure all details are correct before submitting changes.</small>
        </div>
    </div>
</div>
