<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    @* <link rel="stylesheet" href="~/css/SlateTheme.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/ResearchManagementSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site2.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark navbar-custom">
            <div class="container-fluid">
                <a class="btn" data-bs-toggle="offcanvas" href="#sidebar" role="button" aria-controls="sidebar">
                    <i class="fa-solid fa-bars fa-xl" style="color: #ffffff;"></i>
                </a>
                <a class="navbar-brand" href="#">
                    <img src="~/images/RMOlogo.png" alt="Logo" style="height: 50px; width: auto;">
                </a>
                <div class="research-management-office">
                    Research Management Office <br />
                    <div class="polytechnic-university">
                        Polytechnic University of the Philippines
                    </div>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1">
                        <!-- Home Link -->
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="CreSys" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            @* Determine the current role from session *@
                            var currentRole = Context.Session.GetString("CurrentRole");

                            switch (currentRole)
                            {
                                case "Secretariat":

                                    <li class="nav-item">
                                        <a class="nav-link text-white" asp-area="CreSys" asp-controller="Secretariat" asp-action="InitialReview">Application</a>
                                    </li>
                                    break;

                                case "CRE Chief":
                                    <li class="nav-item">
                                        <a class="nav-link text-white" asp-area="CreSys" asp-controller="Chief" asp-action="Dashboard">Dashboard</a>
                                    </li>
                                    <li class="nav-item dropdown">
                                        <a class="nav-link text-white dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            Ethics
                                        </a>
                                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                            <li><a class="dropdown-item" asp-area="CreSys" asp-controller="Chief" asp-action="ApplicationsApprovedForEvaluation">Applications</a></li>
                                            <li><a class="dropdown-item" asp-area="CreSys" asp-controller="Chief" asp-action="PendingExemptEvaluations">Evaluations</a></li>
                                            <li><a class="dropdown-item" asp-area="CreSys" asp-controller="Chief" asp-action="CompletionReports">Completion</a></li>
                                        </ul>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link text-white" asp-area="CreSys" asp-controller="Chief" asp-action="EthicsForms">Forms</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white" asp-area="CreSys" asp-controller="Chief" asp-action="ViewEthicsEvaluators">Manage</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white" asp-area="CreSys" asp-controller="Chief" asp-action="Reports">Reports</a>
                                    </li>
                                    break;
                                case "Chairperson":

                                    <li class="nav-item">
                                        <a class="nav-link text-white" asp-area="CreSys" asp-controller="Chairperson" asp-action="SelectApplication">Application</a>
                                    </li>
                                    break;

                                case "CRE Evaluator":

                                    <li class="nav-item">
                                        <a class="nav-link text-white" asp-area="CreSys" asp-controller="Evaluator" asp-action="EvaluatorView">Evaluation</a>
                                    </li>
                                    break;

                                case "Student":
                                    <li class="nav-item">
                                        <a class="nav-link text-white" asp-area="CreSys" asp-controller="Researcher" asp-action="Applications">Applications</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white" asp-area="CreSys" asp-controller="Researcher" asp-action="DownloadForms">Forms</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white" asp-area="CreSys" asp-controller="Researcher" asp-action="ViewNotifications">Notifications</a>
                                    </li>
                                    break;
                                case "External Researcher":
                                    <li class="nav-item">
                                        <a class="nav-link text-white" asp-area="CreSys" asp-controller="Researcher" asp-action="Applications">Applications</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white" asp-area="CreSys" asp-controller="Researcher" asp-action="DownloadForms">Forms</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white" asp-area="CreSys" asp-controller="Researcher" asp-action="ViewNotifications">Notifications</a>
                                    </li>
                                    break;
                                case "Faculty":
                                    <li class="nav-item">
                                        <a class="nav-link text-white" asp-area="CreSys" asp-controller="Researcher" asp-action="Applications">Applications</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white" asp-area="CreSys" asp-controller="Researcher" asp-action="DownloadForms">Forms</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white" asp-area="CreSys" asp-controller="Researcher" asp-action="ViewNotifications">Notifications</a>
                                    </li>
                                    break;
                            }
                        }
                    </ul>

                    <!-- Login/Logout and dropdown Section -->
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- Role Switch Dropdown -->
                            <li class="nav-item dropdown">
                                <a class="btn btn-outline-light dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color: white;">
                                    @(Context.Session.GetString("CurrentRole")) <!-- Default text if no role is set -->
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                @using Microsoft.AspNetCore.Identity
                                @using ResearchManagementSystem.Models
                                @inject UserManager<ApplicationUser> UserManager
                                    @{
                                        var user = await UserManager.GetUserAsync(User);
                                        var roles = await UserManager.GetRolesAsync(user);

                                    }

                                    @* Loop through roles and create dropdown items *@
                                    @foreach (var role in roles)
                                    {
                                        <form asp-controller="Home" asp-action="SwitchRole" method="post" style="display:inline;">
                                            <input type="hidden" name="roleName" value="@role" />
                                            <button type="submit" class="dropdown-item">@role</button>
                                        </form>
                                    }
                                </div>
                            </li>
                            <li class="hoverfxright me-2 p-2 rounded-2">
                                @if (Context.Session.GetString("CurrentRole") == "Student")
                                {
                                    <a asp-area="" asp-controller="Student" asp-action="StudentCenters">
                                        <i class="fa-solid fa-landmark fa-lg" style="color: #ffffff;"></i>
                                    </a>
                                }
                                else
                                {
                                    <a asp-area="" asp-controller="Faculty" asp-action="FacultyCenters">
                                        <i class="fa-solid fa-landmark fa-lg" style="color: #ffffff;"></i>
                                    </a>
                                }
                            </li>
                            <li class="hoverfxright me-2 p-2 rounded-2">
                                <a asp-area="Identity" asp-page="/Account/Manage/Index"><i class="fa-solid fa-user fa-lg" style="color: #ffffff;"></i></a>
                            </li>

                        }
                        <!-- Show Logout when user is logged in -->
                        <!--Yung log in and logout dito, pwede na tanggalin kasi meron na sa side bar-->
                        @*  <li class="nav-item">
                        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="nav-link btn btn-link" style="color: white; text-decoration: none;">
                        Logout
                        </button>
                        @Html.AntiForgeryToken()
                        </form>
                        </li>
                        }

                        *@

                        @*  else
                        {
                        <!-- Show Login link when no user is logged in -->
                        <li class="nav-item">
                        <a class="nav-link" asp-area="Identity" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                        } *@
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="offcanvas offcanvas-start sidebar" tabindex="-1" id="sidebar" aria-labelledby="sidebarLabel">
        <a class="text-dark text-decoration-none" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
            <div class="profile-section d-block text-center">

                <img src="~/images/profile.png" alt="User Profile" class="profile-image w-50 d-block mx-auto mb-2">

                <!-- Clickable Hello, [Username] link -->

                <p class="user-email my-0 fs-6 fw-light text-white">Hello, @User.Identity?.Name!</p>
            </div>
        </a>


        <div class="menu-section">
            <ul>
                <li class="sideitemz p-2 rounded-2"><a class="text-white text-decoration-none" asp-area="" asp-controller="AddFAQs" asp-action="Index"><i class="fa-solid fa-person-circle-question fa-2xl me-3" style="color: #ffffff;"></i><span class="ms-2">FAQs</span></a></li>
                <li class="sideitemz p-2 rounded-2"><a class="text-white text-decoration-none" asp-area="" asp-controller="Faculty" asp-action="FacultyRateUs"><i class="fa-solid fa-star fa-2xl me-3" style="color: #ffffff;"></i><span class="ms-2">Rate Us</span></a></li>
                <li class="sideitemz p-2 rounded-2"><a class="text-white text-decoration-none" asp-area="" asp-controller="Faculty" asp-action="FacultyReportGenerateReport"><i class="fa-solid fa-file-export fa-2xl me-3" style="color: #ffffff;"></i><span class="ms-2">Report</span></a></li>
                <li class="sideitemz p-2 rounded-2"><a class="text-white text-decoration-none" asp-area="" asp-controller="Faculty" asp-action="FacultyAbout"><i class="fa-solid fa-circle-info fa-2xl me-3" style="color: #ffffff;"></i><span class="ms-2">About</span></a></li>
            </ul>
        </div>

        <div class="logout-section mt-3">
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="logout-button btn btn-link text-white w-100">
                    <i class="fa-solid fa-right-from-bracket fa-2xl me-3" style="color: #ffffff;"></i> Log Out
                </button>
            </form>
        </div>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Error:</strong> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Notice  :</strong> @TempData["Message"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Success:</strong> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["InfoMessage"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <strong>Info:</strong> @TempData["InfoMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @RenderBody()
        </main>
    </div>

    @*     <footer class="border-top footer text-muted">
    <div class="container">
    &copy; 2024 - CRE - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
    </footer> *@
    <!-- Load jQuery (only once) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>


    <!-- Your custom JavaScript file -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>