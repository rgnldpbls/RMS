<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Font and Icon Libraries -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/ChiefLinkNavBar.css" asp-append-version="true">
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Navbar -->
    <header class="research-navbar">
        <div class="navbar-container-left">
            <div class="logo">
                <img src="~/assets/rmologo.png" alt="Logo">
                <div class="logo-text">
                    <h5>Research Management Office</h5>
                    <p>Polytechnic University of the Philippines</p>
                </div>
            </div>
        </div>

        <!-- Navigation Links -->
        <nav class="navbar-links">
            <ul id="nav-items">
                <li><a asp-area="CrdlSys" asp-controller="Chief" asp-action="HomeChief" id="home-link">Home</a></li>
                <li><a asp-area="CrdlSys" asp-controller="Chief" asp-action="ChiefHomePage" id="dashboard-link">Dashboard</a></li>
                <li><a asp-area="CrdlSys" id="linkages-link" data-bs-toggle="modal" data-bs-target="#LayoutLinkagesTypeModal">Linkages</a></li>
                <li><a asp-area="CrdlSys" id="events-link" data-bs-toggle="modal" data-bs-target="#LayoutManageEventsModal" class="active">Events</a></li>
                <li><a asp-area="CrdlSys" asp-controller="Chief" asp-action="GenerateReport" id="reports-link">Reports</a></li>
            </ul>
        </nav>
    </header>

    <!-- Main Content -->
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <!-- Modals -->
    <!-- Linkages Modal -->
    <div class="modal fade layout-modal" id="LayoutLinkagesTypeModal" tabindex="-1" aria-labelledby="LinkagesTypeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="LinkagesTypeModalLabel">Select Type</h5>
                </div>
                <div class="modal-body">
                    <a asp-area="CrdlSys" asp-controller="Chief" asp-action="SendDocument" class="btn btn-custom">Send Document (MOA/MOU)</a>
                    <a asp-area="CrdlSys" data-bs-toggle="modal" data-bs-target="#LayoutManageDocsModal" class="btn btn-custom">Manage Documents (MOA/MOU)</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Manage Documents Modal -->
    <div class="modal fade layout-modal" id="LayoutManageDocsModal" tabindex="-1" aria-labelledby="ManageDocsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="ManageDocsModalLabel">Select Documents</h5>
                </div>
                <div class="modal-body">
                    <a asp-area="CrdlSys" asp-controller="Chief" asp-action="ViewChiefUploads" class="btn btn-custom">Chief Uploads</a>
                    <a asp-area="CrdlSys" asp-controller="Chief" asp-action="ViewStakeholderUploads" class="btn btn-custom">Stakeholder Uploads</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Manage Events Modal -->
    <div class="modal fade layout-modal" id="LayoutManageEventsModal" tabindex="-1" aria-labelledby="ManageEventsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="ManageEventsModalLabel">Select Event Action</h5>
                </div>
                <div class="modal-body">
                    <a data-bs-toggle="modal" data-bs-target="#LayoutCreateEventModal" class="btn btn-custom">Create Event</a>
                    <a data-bs-toggle="modal" data-bs-target="#LayoutViewEventModal" class="btn btn-custom">Manage Event</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Create Event Modal -->
    <div class="modal fade layout-modal" id="LayoutCreateEventModal" tabindex="-1" aria-labelledby="CreateEventModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="CreateEventModalLabel">Select Event to Create</h5>
                </div>
                <div class="modal-body">
                    <a asp-area="CrdlSys" asp-controller="Chief" asp-action="CreateRCBAEvent" class="btn btn-custom">RCBA Event</a>
                    <a href="https://rcbacrdlconferencewebsite.azurewebsites.net/" target="_blank" class="btn btn-custom">Conference</a>
                </div>
            </div>
        </div>
    </div>

    <!-- View Event Modal -->
    <div class="modal fade layout-modal" id="LayoutViewEventModal" tabindex="-1" aria-labelledby="ViewEventModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="ViewEventModalLabel">Select Event to View</h5>
                </div>
                <div class="modal-body">
                    <a asp-area="CrdlSys" asp-controller="Chief" asp-action="ManageRCBAEvent" class="btn btn-custom">RCBA Event</a>
                    <a href="https://rcbacrdlconferencewebsite.azurewebsites.net/" target="_blank" class="btn btn-custom">Conference</a>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
