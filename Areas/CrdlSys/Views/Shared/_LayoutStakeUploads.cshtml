<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/ChiefLinkNavBar.css" asp-append-="true" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/84ccdc0b43.js" crossorigin="anonymous"></script>
</head>
<body>
    <header class="research-navbar">
        <div class="navbar-container-left">
            <div class="logo">
                <img src="~/assets/rmologo.png" alt="Logo">
                <div class="logo-text">
                    <h5>Research Management Office</h5>
                    <p>Polytechnic University of the Philippines</p>
                </div>
            </div>
        </div>
        <!-- Center Section: Dynamic Navigation Links -->
        <nav class="navbar-links">
            <ul id="nav-items">
                <li><a asp-area="CrdlSys" asp-controller="Stakeholder" asp-action="HomeStake" id="home-link">Home</a></li>
                <li><a asp-area="CrdlSys" asp-controller="Stakeholder" asp-action="ViewDocuments">Linkages</a></li>
                <li><a asp-area="CrdlSys" asp-controller="Stakeholder" asp-action="UploadDocument" id="upload-link" class="active">Upload</a></li>
            </ul>
        </nav>
    </header>
    
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/js/sidebar.js"></script>
</body>
</html>