@model ResearchManagementSystem.Models.AddPatent

@{
    ViewData["Title"] = "Create";

    Layout = "RMCC_Layout";
}
<link href="~/css/ClusterCoordinator-Accomplishmentadd.css" rel="stylesheet" />
<style>
    #title {
        background: #850000;
        color: white;
    }
</style>
<div>
    <!--navbar-->
    <div class="nnvb container mt-3 mb-3">
        <div class="row">
            <div class="itm-active col-lg-2 col-sm-12 me-2 p-1 mb-1 text-center">
                <a class="text-decoration-none" asp-controller="AddAccomplishments" asp-action="IndexRMCC" id="aactive">Accomplishment List</a>
            </div>
            <div class="itm col-lg-2 col-sm-12 me-2 p-1 mb-1 text-center">
                <a class="text-decoration-none" asp-controller="AddAccomplishments" asp-action="Create" id="inaactive">Add Accomplishment</a>
            </div>
        </div>
    </div>
    <form id="patentForm" asp-action="AddPatent" enctype="multipart/form-data" method="post">
        <!--hidden-->
        <input type="hidden" asp-for="ProductionId" />
        <input type="hidden" asp-for="patentId" />

        <!--research patent-->
        <div class="container shadow mb-3" id="content">
            <div class="row shadow-sm h3 p-4 mb-1" id="title">
                Patent
            </div>
            <div class="row shadow p-4" id="formcont">

                <!--patent number-->
                <div class="row">
                    <div class="col-lg-6 col-sm-12">
                        <label asp-for="PatentNo" class="form-label">Patent Number</label>
                        <input asp-for="PatentNo" class="form-control mb-3" placeholder="Patent Number" />
                        <span asp-validation-for="PatentNo" class="text-danger"></span>
                    </div>
                </div>
                <!--application form-->
                <div class="row">
                    <div class="col-lg-12 col-sm-12">
                        <label class="form-label" for="file">Patent Application Form</label>
                        <input class="form-control mb-3" type="file" id="file" name="ApplicationFormFile" accept=".pdf" required>
                    </div>
                </div>
            </div>
        </div>

        <div class="container mt-3 mb-3">
            <div class="d-flex justify-content-end">
                <input type="reset" value="Clear" class="ms-2" id="reset">
                <input type="submit" value="Create" class="ms-2" onclick="validateAndSubmitForm()">
            </div>
        </div>
    </form>

</div>
<!--research added modal-->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4" id="bgmodal">
            <div class="modal-body rounded-4 p-4">
                <h2 class="text-center mb-4" id="modaltitle">Patent Details Added</h2>
                <p id="content">The patent details for research titled "[Research Title]" has been successfully added.</p>
                <div class="mt-4 d-flex justify-content-center align-items-center">
                    <button type="button" class="me-2" data-bs-dismiss="modal" id="modalbtn">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function validateAndSubmitForm() {
            const form = document.getElementById("patentForm");
            if (form.checkValidity()) {
                // Show the modal if form is valid
                var modal = new bootstrap.Modal(document.getElementById("staticBackdrop"));
                modal.show();
                form.submit(); // Submit the form after displaying the modal
            } else {
                form.reportValidity(); // Show validation errors
            }
        }
    </script>
}
