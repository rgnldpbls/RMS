@model ResearchManagementSystem.Models.AddPublication

@{
    ViewData["Title"] = "Create";

    Layout = "RMCC_Layout";
}
<link href="~/css/ClusterCoordinator-Accomplishmentadd.css" rel="stylesheet" />
<style>
    #title {
        background: #850000;
        color: white;
    }
</style>
<div>
    <!--navbar-->
    <div class="nnvb container mt-3 mb-3">
        <div class="row">
            <div class="itm-active col-lg-2 col-sm-12 me-2 p-1 mb-1 text-center">
                <a class="text-decoration-none" asp-controller="AddAccomplishments" asp-action="IndexRMCC" id="aactive">Accomplishment List</a>
            </div>
            <div class="itm col-lg-2 col-sm-12 me-2 p-1 mb-1 text-center">
                <a class="text-decoration-none" asp-controller="AddAccomplishments" asp-action="Create" id="inaactive">Add Accomplishment</a>
            </div>
        </div>
    </div>

    <form id="publicationForm" asp-action="AddPublication" enctype="multipart/form-data" method="post">
        <!--research publication-->
        <div class="container shadow mb-3" id="content">
            <div class="row shadow-sm h3 p-4 mb-1" id="title">
                Research Publication
            </div>

            <div class="row shadow p-4" id="formcont">
                <!--hidden-->
                <input type="hidden" name="ProductionId" value="@Model.ProductionId" />

                <!--Article/Title-->
                <div class="row">
                    <div class="col-lg-6 col-sm-12">
                        <label asp-for="ArticleTitle" class="form-label">Article/Title <span style="color: red">*</span></label>
                        <input asp-for="ArticleTitle" class="form-control" placeholder="Article/Title" required />
                        <span asp-validation-for="ArticleTitle" class="text-danger"></span>
                    </div>
                </div>
                <!--publication date-->
                <div class="row">
                    <div class="col-lg-6 col-sm-12">
                        <label for="PublicationDate" class="form-label mt-3">Date of Publication <span style="color: red">*</span></label>
                        <input type="date" name="PublicationDate" class="form-control" value="@Model.PublicationDate?.ToString("yyyy-MM-dd")" required />

                        <span asp-validation-for="PublicationDate" class="text-danger"></span>

                    </div>
                </div>
                <!--Title of Journal Publication-->
                <div class="row">
                    <div class="col-lg-6 col-sm-12">
                        <label asp-for="JournalPubTitle" class="form-label mt-3">Title of Journal Publication <span style="color: red">*</span></label>
                        <input asp-for="JournalPubTitle" class="form-control" placeholder="Title of Journal Publication" required />
                        <span asp-validation-for="JournalPubTitle" class="text-danger"></span>

                    </div>
                </div>
                <!--Document Type-->
                <div class="row">
                    <div class="col-lg-4 col-sm-12">
                        <label asp-for="DocumentType" class="form-label mt-3">Document Type <span style="color: red">*</span></label>
                        <select asp-for="DocumentType" class="form-select" required>
                            <option value="Article">Article</option>
                            <option value="Conference Paper">Conference Paper</option>
                            <option value="Book Chapter">Book Chapter</option>
                            <option value="Book">Book</option>
                        </select>

                        <span asp-validation-for="DocumentType" class="text-danger"></span>

                    </div>
                    <!--vol no issue no-->
                    <div class="col-lg-4 col-sm-12">
                        <label asp-for="VolnoIssueNo" class="form-label mt-3">Vol. No. & Issue No.</label>
                        <input asp-for="VolnoIssueNo" class="form-control" placeholder="Vol. No. & Issue No." />
                        <span asp-validation-for="VolnoIssueNo" class="text-danger"></span>

                    </div>
                    <!--IssnIsbnEssn-->
                    <div class="col-lg-4 col-sm-12">
                        <label asp-for="IssnIsbnEssn" class="form-label mt-3">ISSN/ISBN/ESSN</label>
                        <input asp-for="IssnIsbnEssn" class="form-control" placeholder="ISSN/ISBN/ESSN" />
                        <span asp-validation-for="IssnIsbnEssn" class="text-danger"></span>

                    </div>
                </div>
                <!--doi-->
                <div class="row">
                    <div class="col-lg-12 col-sm-12">
                        <label asp-for="DOI" class="form-label mt-3">DOI</label>
                        <input asp-for="DOI" class="form-control" placeholder="DOI" />
                        <span asp-validation-for="DOI" class="text-danger"></span>
                    </div>
                </div>
                <!--Indicate Where the Journal is Index-->
                <div class="row">
                    <div class="col-lg-12 col-sm-12">
                        <label asp-for="IndexJournal" class="form-label mt-3">Indicate Where the Journal is Index</label>
                        <input asp-for="IndexJournal" class="form-control" placeholder="Indicate Where the Journal is Index" />
                        <span asp-validation-for="IndexJournal" class="text-danger"></span>
                    </div>
                </div>
                <!--Supporting Documents-->
                <div class="row">
                    <div class="col-lg-12 col-sm-12">
                        <label asp-for="SuppDocs" class="form-label mt-3">Supporting Documents</label>
                        <input asp-for="SuppDocs" class="form-control" placeholder="Supporting Documents" />
                        <span asp-validation-for="SuppDocs" class="text-danger"></span>
                    </div>
                </div>
                <!--link-->
                <div class="row">
                    <div class="col-lg-12 col-sm-12">
                        <label asp-for="Link" class="form-label mt-3">Link</label>
                        <input asp-for="Link" class="form-control" placeholder="Link" />
                        <span asp-validation-for="Link" class="text-danger"></span>
                    </div>
                </div>
                <!--manu-->
                <div class="row">
                    <div class="col-lg-12 col-sm-12">
                        <label class="form-label mt-3" for="Manuscript_in_Journal_Format">Manuscript in Journal Format</label>
                        <input class="form-control" type="file" name="ManuscriptJournalFile" placeholder="Manuscript in Journal Format" accept=".pdf" required>
                    </div>
                </div>
            </div>
        </div>
        <div class="container mt-3 mb-3">
            <div class="d-flex justify-content-end">
                <input type="reset" value="Clear" class="ms-2" id="reset">
                <input type="submit" value="Create" class="ms-2" onclick="validateAndSubmitForm()">
            </div>
        </div>
    </form>

</div>
<!--research added modal-->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4" id="bgmodal">
            <div class="modal-body rounded-4 p-4">
                <h2 class="text-center mb-4" id="modaltitle">Publication Details Added</h2>
                <p id="content">The publication details for research titled "[Research Title]" has been successfully added.</p>
                <div class="mt-4 d-flex justify-content-center align-items-center">
                    <button type="button" class="me-2" data-bs-dismiss="modal" id="modalbtn">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function validateAndSubmitForm() {
            const form = document.getElementById("publicationForm");
            if (form.checkValidity()) {
                // Show the modal if form is valid
                var modal = new bootstrap.Modal(document.getElementById("staticBackdrop"));
                modal.show();
                form.submit(); // Submit the form after displaying the modal
            } else {
                form.reportValidity(); // Show validation errors
            }
        }
    </script>
}


