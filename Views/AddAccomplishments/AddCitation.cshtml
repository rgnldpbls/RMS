@model ResearchManagementSystem.Models.AddCitation

@{
    ViewData["Title"] = "Create";

    Layout = "RMCC_Layout";
}

<link href="~/css/ClusterCoordinator-Accomplishmentadd.css" rel="stylesheet" />
<style>
    #title {
        background: #850000;
        color: white;
    }
</style>
<div>
    <!--navbar-->
    <div class="nnvb container mt-3 mb-3">
        <div class="row">
            <div class="itm-active col-lg-2 col-sm-12 me-2 p-1 mb-1 text-center">
                <a class="text-decoration-none" asp-controller="AddAccomplishments" asp-action="IndexRMCC" id="aactive">Accomplishment List</a>
            </div>
            <div class="itm col-lg-2 col-sm-12 me-2 p-1 mb-1 text-center">
                <a class="text-decoration-none" asp-controller="AddAccomplishments" asp-action="Create" id="inaactive">Add Accomplishment</a>
            </div>
        </div>
    </div>
    <form id="citationForm" asp-action="AddCitation" enctype="multipart/form-data" method="post">
        <!--citation-->
        <div class="container shadow mb-3" id="content">
            <div class="row shadow-sm h3 p-4 mb-1" id="title">
                Citation
            </div>
            <div class="row shadow p-4" id="formcont">
                <!--hidden-->
                <input type="hidden" asp-for="ProductionId" />
                <input type="hidden" asp-for="CitationId" />

                <!--Title of (Original) Research Article-->
                <div class="row">
                    <div class="col-lg-12 col-sm-12">
                        <label asp-for="ArticleTitle" class="form-label">Title of (Original) Research Article</label>
                        <input asp-for="ArticleTitle" class="form-control mb-3" placeholder="Title of (Original) Research Article" />
                        <span asp-validation-for="ArticleTitle" class="text-danger"></span>
                    </div>
                </div>

                <!--Authors-->
                <div class="row mt-3 mb-3">
                    <div class="col-lg-4 col-sm-5">
                        <hr>
                    </div>
                    <div class="col-lg-4 col-sm-2 text-center">
                        <h4>Author/s of (Original) Article</h4>
                    </div>
                    <div class="col-lg-4 col-sm-5">
                        <hr>
                    </div>
                </div>
                <div class="row">
                    <!--author1-->
                    <div class="col-lg-6 col-sm-12">
                        <label asp-for="LeadResearcherId" class="form-label">Author 1</label>
                        <select asp-for="LeadResearcherId" class="form-control mb-3" asp-items="ViewBag.LeadResearcherId"></select>
                    </div>
                    <!--author2-->
                    <div class="col-lg-6 col-sm-12">
                        <label asp-for="CoLeadResearcherId" class="form-label">Author 2</label>
                        <select asp-for="CoLeadResearcherId" class="form-control mb-3" asp-items="ViewBag.CoLeadResearcherId"></select>
                    </div>
                </div>
                <div class="row">
                    <!--author3-->
                    <div class="col-lg-4 col-sm-12">
                        <label asp-for="MemberoneId" class="form-label">Author 3</label>
                        <select asp-for="MemberoneId" class="form-control mb-3" asp-items="ViewBag.MemberoneId"></select>
                    </div>
                    <!--author4-->
                    <div class="col-lg-4 col-sm-12">
                        <label asp-for="MembertwoId" class="form-label">Author 4</label>
                        <select asp-for="MembertwoId" class="form-control mb-3" asp-items="ViewBag.MembertwoId"></select>
                    </div>
                    <!--author5-->
                    <div class="col-lg-4 col-sm-12">
                        <label asp-for="MemberthreeId" class="form-label">Author 5</label>
                        <select asp-for="MemberthreeId" class="form-control mb-3" asp-items="ViewBag.MemberthreeId"></select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-sm-12">
                        <hr>
                    </div>
                </div>
                <!--Title of Refereed Journal Where the (Original) Research Article Was Published-->
                <div class="row">
                    <div class="col-lg-12 col-sm-12">
                        <label asp-for="OriginalArticlePublished" class="form-label">Title of Refereed Journal Where the (Original) Research Article Was Published</label>
                        <input asp-for="OriginalArticlePublished" class="form-control mb-3" placeholder="Title of Refereed Journal Where the (Original) Research Article Was Published" />
                        <span asp-validation-for="OriginalArticlePublished" class="text-danger"></span>
                    </div>
                </div>
                <!--Title of (New) Publication Where the (Original) Research Article Was Cited-->
                <div class="row">
                    <div class="col-lg-12 col-sm-12">
                        <label asp-for="NewPublicationTitle" class="form-label">Title of (New) Publication Where the (Original) Research Article Was Cited</label>
                        <input asp-for="NewPublicationTitle" class="form-control mb-3" placeholder="Title of (New) Publication Where the (Original) Research Article Was Cited" />
                        <span asp-validation-for="NewPublicationTitle" class="text-danger"></span>
                    </div>
                </div>

                <!--Author/s of the (New) Article Who Cited the (Original) Research Article-->
                <div class="row">
                    <div class="col-lg-12 col-sm-12">
                        <label asp-for="AuthorsofNewArticle" class="form-label">Author/s of the (New) Article Who Cited the (Original) Research Article</label>
                        <input asp-for="AuthorsofNewArticle" class="form-control mb-3" placeholder="Author/s of the (New) Article Who Cited the (Original) Research Article" />
                        <span asp-validation-for="AuthorsofNewArticle" class="text-danger"></span>
                    </div>
                </div>
                <!--Title of Refereed Journal Where the (New) Research Article Was Published-->
                <div class="row">
                    <div class="col-lg-12 col-sm-12">
                        <label asp-for="NewArticlePublished" class="form-label">Title of Refereed Journal Where the (New) Research Article Was Published</label>
                        <input asp-for="NewArticlePublished" class="form-control mb-3" placeholder="Title of Refereed Journal Where the (New) Research Article Was Published" />
                        <span asp-validation-for="NewArticlePublished" class="text-danger"></span>
                    </div>
                </div>
                <!--vol no issue no-->
                <div class="row">
                    <div class="col-lg-12 col-sm-12">
                        <label asp-for="VolNoIssueNo" class="form-label">Volume No./Issue No.</label>
                        <input asp-for="VolNoIssueNo" class="form-control mb-3" placeholder="Volume No./Issue No." />
                        <span asp-validation-for="VolNoIssueNo" class="text-danger"></span>
                    </div>
                </div>
                <!--No. of Pages-->
                <div class="row">
                    <div class="col-lg-12 col-sm-12">
                        <label asp-for="Pages" class="form-label">No. of Pages</label>
                        <input asp-for="Pages" class="form-control mb-3" placeholder="No. of Pages" />
                        <span asp-validation-for="Pages" class="text-danger"></span>
                    </div>
                </div>

                <!--Year of Publication-->
                <div class="row">
                    <div class="col-lg-12 col-sm-12">
                        <label asp-for="YearofPublication" class="form-label">Year of Publication</label>
                        <input asp-for="YearofPublication" class="form-control mb-3" placeholder="Year of Publication" />
                        <span asp-validation-for="YearofPublication" class="text-danger"></span>
                    </div>
                </div>
                <!--Indexing-->
                <div class="row">
                    <div class="col-lg-12 col-sm-12">
                        <label asp-for="Indexing" class="form-label"></label>
                        <input asp-for="Indexing" class="form-control mb-3" placeholder="Indexing" />
                        <span asp-validation-for="Indexing" class="text-danger"></span>
                    </div>
                </div>
                <!--Upload File for Proof-->
                <div class="row">
                    <div class="col-lg-12 col-sm-12">
                        <label class="form-label" for="proof">Upload File for Proof</label>
                        <input class="form-control mb-3" type="file" name="file" id="proof" placeholder="Upload File for Proof" accept="image/*">
                    </div>
                </div>
            </div>
        </div>
        <div class="container mt-3 mb-3">
            <div class="d-flex justify-content-end">
                <input type="reset" value="Clear" class="ms-2" id="reset">
                <input type="submit" value="Create" class="ms-2" onclick="validateAndSubmitForm()">
            </div>
        </div>
    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function validateAndSubmitForm() {
            const form = document.getElementById("citationForm");
            if (form.checkValidity()) {
                // Show the modal if form is valid
                var modal = new bootstrap.Modal(document.getElementById("staticBackdrop"));
                modal.show();
                form.submit(); // Submit the form after displaying the modal
            } else {
                form.reportValidity(); // Show validation errors
            }
        }
    </script>
}
