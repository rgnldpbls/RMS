@model IEnumerable<ResearchManagementSystem.Models.AddAccomplishment.FacultyAccomplishmentViewModel>
@{
    ViewData["Title"] = "Accomplishments";
    Layout = "Director";
}
<link href="~/css/ClusterCoordinator-accomplishmentlist.css" rel="stylesheet" />
<style>

    .cat {
        text-shadow: 4px 4px 8px rgba(0, 0, 0, 0.25);
        color: #850000;
        font-weight: bolder;
        font-family: "Poppins";
        border-bottom: 5px solid #850000;
    }
</style>

<!--title-->
<div class="cat display-6 mb-3 pb-1">Accomplishments</div>

<!--table-->
<div class="container bg-white shadow mt-1 table-responsive rounded-4 p-0">
    <table class="table w-100">
        <thead class="shadow-sm" style="background:#850000;">
            <tr class="align-middle">
                <th class="p-4 bg-transparent text-white" scope="col">Production ID</th>
                <th class="p-4 bg-transparent text-white" scope="col">Year</th>
                <th class="p-4 bg-transparent text-white" scope="col">Research Title</th>
                <th class="p-4 bg-transparent text-white" scope="col">Lead Researcher</th>
                <th class="p-4 bg-transparent text-white" scope="col">Co-Lead Researcher</th>
                <th class="p-4 bg-transparent text-white" scope="col">Members</th>
                <th class="p-4 bg-transparent text-white" scope="col">Date Started</th>
                <th class="p-4 bg-transparent text-white" scope="col">Date Completed</th>
                <th class="p-4 bg-transparent text-white" scope="col">Created By</th>
                <th class="p-4 bg-transparent text-white" scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr class="align-middle">
                    <td class="p-4 bg-transparent" scope="row">@item.ProductionId</td>
                    <td class="p-4 bg-transparent">@item.Year</td>
                    <td class="p-4 bg-transparent">@item.ResearchTitle</td>
                    <td class="p-4 bg-transparent">@item.LeadResearcherFirstName @item.LeadResearcherLastName</td>
                    <td class="p-4 bg-transparent">@item.CoLeadResearcherFirstName @item.CoLeadResearcherLastName</td>
                    <td class="p-4 bg-transparent">
                    @if (!string.IsNullOrEmpty(item.MemberoneId))
                    {
                        @item.MemberOneFirstName @item.MemberOneLastName

                        <br />
                    }
                    @if (!string.IsNullOrEmpty(item.MembertwoId))
                    {
                        @item.MemberTwoFirstName @item.MemberTwoLastName

                        <br />
                    }
                    @if (!string.IsNullOrEmpty(item.MemberthreeId))
                    {
                        @item.MemberThreeFirstName @item.MemberThreeLastName
                    }
                </td>
                    <td class="p-4 bg-transparent">@item.DateStarted.ToString("MM/dd/yyyy")</td>
                    <td class="p-4 bg-transparent">@item.DateCompleted?.ToString("MM/dd/yyyy")</td>
                    <td class="p-4 bg-transparent">@item.CreatedByFirstName @item.CreatedByLastName</td>

                    <td class="p-4 bg-transparent">
                    <button id="action" class="me-2"><a asp-action="DetailsDirector" asp-route-id="@item.ProductionId"><i class="fa-solid fa-eye fa-2xl" style="color: #850000;"></i></a></button>
                </td>


            </tr>
        }
    </tbody>
</table>
</div>

