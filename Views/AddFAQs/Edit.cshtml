@model ResearchManagementSystem.Models.AddFAQs

@{
    ViewData["Title"] = "Edit";
}
<link href="~/css/SystemAdministrator-FAQs.css" rel="stylesheet" />
<!--input fields-->
<div class="container shadow mt-4" id="content">
    <div class="row shadow-sm display-6 p-4 mb-1" id="title">
        Edit FAQ
    </div>
    <div class="row shadow p-4" id="formcont">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FAQ_id" />
            <div class="row">
                <div class="col-lg-12 col-sm-12">
                    <div class="form-group">
                        <label asp-for="added_by" class="control-label"></label>
                        <select asp-for="added_by" class="form-control mb-3" asp-items="ViewBag.added_by"></select>
                        <span asp-validation-for="added_by" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12 col-sm-12">
                    <div class="form-group">
                        <label asp-for="question_id" class="control-label"></label>
                        <input asp-for="question_id" class="form-control mb-3" />
                        <span asp-validation-for="question_id" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12 col-sm-12">
                    <div class="form-group">
                        <label asp-for="answer_id" class="control-label"></label>
                        <input asp-for="answer_id" class="form-control mb-3" />
                        <span asp-validation-for="answer_id" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-lg-12 col-sm-12 d-flex justify-content-end">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>

        </form>
    </div>
</div>
<!---->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
