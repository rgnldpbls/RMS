@{
    ViewData["Title"] = "FAQs";
    Layout = "SuperAdmin_Layout";
}
<link href="~/css/SystemAdministrator-FAQs.css" rel="stylesheet" />

<div>
    <!--input fields-->
    <div class="container shadow mt-4" id="content">
        <div class="row shadow-sm display-6 p-4 mb-1" id="title">
            Add FAQ
        </div>
        <div class="row shadow p-4" id="formcont">
            <form action="">
                <div class="row">
                    <div class="col-lg-12 col-sm-12">
                        <label class="form-label" for="question">Question</label>
                        <input class="form-control mb-3" type="text" id="question" placeholder="Question">
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-sm-12">
                        <label class="form-label" for="answer">Answer</label>
                        <textarea name="answer" id="answer" placeholder="Answer" class="form-control"></textarea>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-lg-12 col-sm-12 d-flex justify-content-end">
                        <input type="submit" value="Add FAQ">
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="container display-6 mt-5 p-0">
        <div id="task">Frequently Asked Questions</div>
    </div>

    <div class="container mt-3">
        <div class="container shadow p-3" id="content">
            <div class="row align-items-center">
                <div class="lab col-10">
                    Question
                </div>
                <div class="col-2 text-end">
                    <button id="action" type="button" data-bs-toggle="collapse" data-bs-target="#faqcont" aria-expanded="false" aria-controls="faqcont">
                        <i class="fa-solid fa-circle-chevron-down fa-2xl" style="color: #850000;"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="collapse mt-3 bg-transparent" id="faqcont">
            <div class="card card-body container p-3" id="content">
                <form action="">
                    <div class="row">
                        <div class="col-lg-12 col-sm-12">
                            <label class="form-label" for="question">Question</label>
                            <input class="form-control mb-3" type="text" id="question" placeholder="Question">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-sm-12">
                            <label class="form-label" for="answer">Answer</label>
                            <textarea name="answer" id="answer" placeholder="Answer" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-lg-12 col-sm-12 d-flex justify-content-end">
                            <button id="action" class="me-2"><i class="fa-solid fa-pen-to-square fa-2xl" style="color: #850000;"></i></button>
                            <button id="action"><i class="fa-solid fa-trash fa-2xl" style="color: #850000;"></i></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

</div>