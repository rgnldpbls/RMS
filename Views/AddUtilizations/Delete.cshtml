@model ResearchManagementSystem.Models.AddUtilization

@{
    ViewData["Title"] = "Delete";

    Layout = "RMCC_Layout";
}
<link href="~/css/ClusterCoordinator-Accomplishmentdetails.css" rel="stylesheet" />
<style>
    #title {
        background: #850000;
        color: white;
    }
</style>

<div>
    <!--navbar-->
    <div class="nnvb container mt-3 mb-3">
        <div class="row">
            <div class="itm-active col-lg-2 col-sm-12 me-2 p-1 mb-1 text-center">
                <a class="text-decoration-none" asp-controller="AddAccomplishments" asp-action="IndexRMCC" id="aactive">Accomplishment List</a>
            </div>
            <div class="itm col-lg-2 col-sm-12 me-2 p-1 mb-1 text-center">
                <a class="text-decoration-none" asp-controller="AddAccomplishments" asp-action="Create" id="inaactive">Add Accomplishment</a>
            </div>
        </div>
    </div>
    <div class="container shadow mb-3" id="content">
        <div class="row shadow-sm h3 p-4 mb-1" id="title">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="d-block">Delete</div>
                    <div class="fs-6">Are you sure you want to delete this?</div>
                </div>
                <div>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="UtilizationId" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>

                </div>
            </div>
        </div>

        <dl class="row shadow p-4" id="formcont">
            <dt class="col-sm-2">
                Production Id
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AddAccomplishment.ProductionId)
            </dd>

            <dt class="col-sm-2">
                Certificate of Utilization
            </dt>
            <dd class="col-sm-10">
                @if (Model.CertificateofUtilizationData != null)

                {
                    <a asp-action="DownloadFile" asp-route-id="@Model?.UtilizationId" asp-route-fileType="CertificateofUtilizationData" role="button" class="btn btn-danger btn-sm me-2">
                        @Html.DisplayFor(model => model.CertificateofUtilizationFileName)
                    </a>
                }
            </dd>
        </dl>
    </div>
</div>
