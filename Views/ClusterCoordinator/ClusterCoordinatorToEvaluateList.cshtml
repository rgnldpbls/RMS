@{
    ViewData["Title"] = "Home";
    Layout = "RMCC_Layout";
}

<link href="~/css/ClusterCoordinator-ToEvaluate-List.css" rel="stylesheet" />

<div>
    <div class="container display-6 mt-4 p-0">
        <div id="task">To Evaluate</div>
    </div>

    <!--search and filter-->
    <div class="container mt-3">
        <div class="row justify-content-between">
            <!--search-->
            <div class="col-lg-3 col-sm-12 mb-2">
                <form action="" class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search">
                    <button type="submit" id="action"><i class="fa-solid fa-magnifying-glass fa-2xl" style="color: #850000;"></i></button>
                </form>
            </div>
            <!--filter-->
            <div class="col-lg-3 col-sm-12 mb-2">
                <form action="" class="d-flex">
                    <select id="filterSelect" class="form-select me-2">
                        <option>Title (A-Z)</option>
                        <option>Title (Z-A)</option>
                        <option>Authors (A-Z)</option>
                        <option>Authors (Z-A)</option>
                        <option>College (A-Z)</option>
                        <option>College (Z-A)</option>
                        <option>Campus/Branch (A-Z)</option>
                        <option>Campus/Branch (Z-A)</option>
                        <option>Department (A-Z)</option>
                        <option>Department (Z-A)</option>
                        <option>Application Date (Earliest to Latest)</option>
                        <option>Application Date (Latest to Earliest)</option>
                        <option>Deadline (Earliest to Latest)</option>
                        <option>Deadline (Latest to Earliest)</option>
                    </select>
                    <button type="submit" id="action"><i class="fa-solid fa-filter fa-2xl" style="color: #850000;"></i></button>
                </form>
            </div>
        </div>
    </div>

    <!--table-->
    <div class="container bg-white shadow mt-1 table-responsive rounded-4 p-0">
        <table class="table table-borderless w-100">
            <thead class="shadow-sm">
                <tr class="align-middle">
                    <th class="p-4 bg-transparent" scope="row">Research Title</th>
                    <th class="p-4 bg-transparent" scope="col">Authors</th>
                    <th class="p-4 bg-transparent" scope="col">College</th>
                    <th class="p-4 bg-transparent" scope="col">Campus/Branch</th>
                    <th class="p-4 bg-transparent" scope="col">Department</th>
                    <th class="p-4 bg-transparent" scope="col">Application Date</th>
                    <th class="p-4 bg-transparent" scope="col">Deadline</th>
                    <th class="p-4 bg-transparent" scope="col">Status</th>
                    <th class="p-4 bg-transparent" scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <tr class="align-middle">
                    <td class="p-4 bg-transparent" scope="row">Research Title</td>
                    <td class="p-4 bg-transparent" scope="col">Author Name | User Type</td>
                    <td class="p-4 bg-transparent" scope="col">College</td>
                    <td class="p-4 bg-transparent" scope="col">Campus/Branch</td>
                    <td class="p-4 bg-transparent" scope="col">Department</td>
                    <td class="p-4 bg-transparent" scope="col">Application Date</td>
                    <td class="p-4 bg-transparent" scope="col">Deadline</td>
                    <td class="p-4 bg-transparent" scope="col">
                        <div class="container bg-dark-subtle rounded-2">
                            Status
                        </div>
                    </td>
                    <td class="p-4 bg-transparent" scope="col">
                        <button id="action" class="me-2"><a href="#"><i class="fa-solid fa-eye fa-2xl" style="color: #850000;"></i></a></button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <!--delete modal-->
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content rounded-4" id="bgmodal">
                <div class="modal-body rounded-4 p-4">
                    <h2 class="text-center mb-4" id="modaltitle">Delete Research</h2>
                    <p id="content">Are you sure you want to delete the research titled "[Research Title]"?</p>
                    <strong id="content">This action cannot be undone.</strong>
                    <div class="mt-4 d-flex justify-content-center align-items-center">
                        <button type="button" class="me-2" data-bs-dismiss="modal" id="modalbtn">Close</button>
                        <button type="button" class="me-2" data-bs-dismiss="modal" id="modalbtn">Confirm</button>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>
