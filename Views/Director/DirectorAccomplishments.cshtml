@{
    ViewData["Title"] = "Accomplishments";
    Layout = "Director";
}
<link href="~/css/ClusterCoordinator-accomplishmentlist.css" rel="stylesheet" />
<style>

    .table-responsive {
        overflow-x: auto;
    }

    .sticky-action-column {
        position: sticky;
        right: 0;
        background-color: white;
        z-index: 1;

    }

    @@media (max-width: 576px) {
        .sticky-action-column {
            position: static;
            border-left: none;
        }
    }
</style>
<div>

    <!--search and filter-->
    <div class="container mt-3">
        <div class="row justify-content-between">
            <!--search-->
            <div class="col-lg-3 col-sm-12 mb-2">
                <form action="" class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search">
                    <button type="submit" id="action"><i class="fa-solid fa-magnifying-glass fa-2xl" style="color: #850000;"></i></button>
                </form>
            </div>
            <!--filter-->
            <div class="col-lg-3 col-sm-12 mb-2">
                <form action="" class="d-flex">
                    <div class="dropdown w-100">
                        <button class="btn btn-danger dropdown-toggle w-100 d-flex justify-content-between align-items-center" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Filter
                        </button>
                        <div class="dropdown-menu w-100">
                            <div class="container">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <strong>Date</strong>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-lg-6">
                                        <label class="form-label" for="from">From</label>
                                        <input class="form-control form-control-sm me-2" type="date" id="from">
                                    </div>
                                    <div class="col-lg-6">
                                        <label class="form-label" for="from">To</label>
                                        <input class="form-control form-control-sm me-2" type="date" id="from">
                                    </div>
                                </div>
                                <div class="row mb-1">
                                    <div class="col-lg-12">
                                        <strong>Research Title</strong>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-lg-12">
                                        <select id="filterSelect" class="form-select me-2">
                                            <option>Title (A-Z)</option>
                                            <option>Title (Z-A)</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row mb-1">
                                    <div class="col-lg-12">
                                        <strong>College</strong>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-lg-12">
                                        <select class="form-select" aria-label="College" name="college" id="college">
                                            <option value="CAF">College of Accountancy and Finance (CAF)</option>
                                            <option value="CADBE">College of Architecture, Design and the Built Environment (CADBE)</option>
                                            <option value="CAL">College of Arts and Letters (CAL)</option>
                                            <option value="CBA">College of Business Administration (CBA)</option>
                                            <option value="COC">College of Communication (COC)</option>
                                            <option value="CCIS">College of Computer and Information Sciences (CCIS)</option>
                                            <option value="COED">College of Education (COED)</option>
                                            <option value="CE">College of Engineering (CE)</option>
                                            <option value="CHK">College of Human Kinetics (CHK)</option>
                                            <option value="CL">College of Law (CL)</option>
                                            <option value="CPSPA">College of Political Science and Public Administration (CPSPA)</option>
                                            <option value="CSSD">College of Social Sciences and Development (CSSD)</option>
                                            <option value="CS">College of Science (CS)</option>
                                            <option value="CTHTM">College of Tourism, Hospitality and Transportation Management (CTHTM)</option>
                                            <option value="ITECH"> Institute of Technology (ITECH)</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row mb-1">
                                    <div class="col-lg-12">
                                        <strong>Branch/Campus</strong>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-lg-12">
                                        <select class="form-select" name="branches-and-campuses" id="branches-and-campuses">
                                            <option value="a-mabini">A. Mabini (Campus)</option>
                                            <option value="NDC-Compound">NDC Compound (Campus)</option>
                                            <option value="mh-del-pilar">M.H. Del Pilar (Campus)</option>
                                            <option value="Taguig-City">Taguig City (Branch)</option>
                                            <option value="Quezon-City">Quezon City (Branch)</option>
                                            <option value="San-Juan-City">San Juan City (Branch)</option>
                                            <option value="Parañaque-City">Parañaque City (Campus)</option>\
                                            <option value="Bataan">Bataan (Branch)</option>
                                            <option value="Sta-Maria-Bulacan">Sta. Maria, Bulacan (Campus)</option>
                                            <option value="Pulilan-Bulacan">Pulilan, Bulacan (Campus)</option>
                                            <option value="Cabiao-Nueva-Ecija">Cabiao, Nueva Ecija (Campus)</option>
                                            <option value="Lopez-Quezon">Lopez, Quezon (Branch)</option>
                                            <option value="Mulanay-Quezon">Mulanay, Quezon (Branch)</option>
                                            <option value="General-Luna-Quezon">General Luna, Quezon (Mulanay Annex)</option>
                                            <option value="Unisan-Quezon">Unisan, Quezon (Branch)</option>
                                            <option value="Ragay-Camarines-Sur">Ragay, Camarines Sur (Branch)</option>
                                            <option value="Sto-Tomas-Batangas">Sto. Tomas, Batangas (Branch)</option>
                                            <option value="Maragondon-Cavite">Maragondon, Cavite (Branch)</option>
                                            <option value="Alfonso-Cavite">Alfonso, Cavite (Maragondon Annex)</option>
                                            <option value="Bansud-Oriental-Mindoro">Bansud, Oriental Mindoro (Branch)</option>
                                            <option value="Sablayan-Occidental-Mindoro">Sablayan, Occidental Mindoro (Branch)</option>
                                            <option value="Biñan-Laguna">Biñan, Laguna (Campus)</option>
                                            <option value="San-Pedro-Laguna">San Pedro, Laguna (Campus)</option>
                                            <option value="Sta-Rosa-Laguna">Sta. Rosa, Laguna (Campus)</option>
                                            <option value="Calauan-Laguna">Calauan, Laguna (Campus)</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row mb-1">
                                    <div class="col-lg-12">
                                        <strong>Department</strong>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <select id="department" class="form-select mb-3">
                                            <option value="">Department</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row mb-1">
                                    <div class="col-lg-12">
                                        <button type="button" class="btn btn-danger w-100">Apply Filter</button>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="container bg-white shadow mt-1 table-responsive rounded-4 p-0">
        <table class="table table-borderless w-100">
            <thead class="shadow-sm">
                <tr class="align-middle">
                    <th class="p-4 bg-transparent" scope="row">Research Title</th>
                    <th class="p-4 bg-transparent d-none d-md-table-cell" scope="col">Lead Researcher</th>
                    <th class="p-4 bg-transparent d-none d-md-table-cell" scope="col">Co-Lead</th>
                    <th class="p-4 bg-transparent d-none d-md-table-cell" scope="col">Member 1</th>
                    <th class="p-4 bg-transparent d-none d-lg-table-cell" scope="col">Member 2</th>
                    <th class="p-4 bg-transparent d-none d-lg-table-cell" scope="col">Member 3</th>
                    <th class="p-4 bg-transparent d-none d-lg-table-cell" scope="col">College</th>
                    <th class="p-4 bg-transparent d-none d-xl-table-cell" scope="col">Actual Date Started</th>
                    <th class="p-4 bg-transparent d-none d-xl-table-cell" scope="col">Target Date of Completion</th>

                    <th class="p-4 bg-white sticky-action-column" scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <tr class="align-middle">
                    <td class="p-4 bg-transparent" scope="row">Research Title</td>
                    <td class="p-4 bg-transparent d-none d-md-table-cell" scope="col">Lead Researcher</td>
                    <td class="p-4 bg-transparent d-none d-md-table-cell" scope="col">Co-Lead</td>
                    <td class="p-4 bg-transparent d-none d-md-table-cell" scope="col">Member 1</td>
                    <td class="p-4 bg-transparent d-none d-lg-table-cell" scope="col">Member 2</td>
                    <td class="p-4 bg-transparent d-none d-lg-table-cell" scope="col">Member 3</td>
                    <td class="p-4 bg-transparent d-none d-lg-table-cell" scope="col">College</td>
                    <td class="p-4 bg-transparent d-none d-xl-table-cell" scope="col">Actual Date Started</td>
                    <td class="p-4 bg-transparent d-none d-xl-table-cell" scope="col">Target Date of Completion</td>
                    <td class="p-4 bg-white sticky-action-column" scope="col">
                        <div class="d-flex">
                            <a class="btn btn-danger me-1" style="background:#850000;" role="button" asp-controller="Director" asp-action="DirectorProductionView">Production</a>
                            <a class="btn btn-primary me-1" role="button" asp-controller="Director" asp-action="DirectorPresentationView">Presentation</a>
                            <a class="btn btn-secondary me-1" role="button" asp-controller="Director" asp-action="DirectorPublicationView">Publication</a>
                            <a class="btn btn-success me-1" role="button" asp-controller="Director" asp-action="DirectorUtilizationView">Utilization</a>
                            <a class="btn btn-danger me-1" role="button" asp-controller="Director" asp-action="DirectorPatentView">Patent</a>
                            <a class="btn btn-warning me-1" role="button" asp-controller="Director" asp-action="DirectorCitationView">Citation</a>
                            <a class="btn btn-info me-1" role="button" asp-controller="Director" asp-action="DirectorCopyrightView">Copyright</a>
                        </div>
                    </td>
                </tr>

            </tbody>
        </table>
    </div>

    <!--delete modal-->
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content rounded-4" id="bgmodal">
                <div class="modal-body rounded-4 p-4">
                    <h2 class="text-center mb-4" id="modaltitle">Delete Research</h2>
                    <p id="content">Are you sure you want to delete the research titled "[Research Title]"?</p>
                    <strong id="content">This action cannot be undone.</strong>
                    <div class="mt-4 d-flex justify-content-center align-items-center">
                        <button type="button" class="me-2" data-bs-dismiss="modal" id="modalbtn">Close</button>
                        <button type="button" class="me-2" data-bs-dismiss="modal" id="modalbtn">Confirm</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
