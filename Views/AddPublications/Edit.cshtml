@model ResearchManagementSystem.Models.AddPublication

@{
    ViewData["Title"] = "Edit";

    Layout = "RMCC_Layout";
}

<link href="~/css/ClusterCoordinator-Accomplishmentadd.css" rel="stylesheet" />
<style>
    #title {
        background: #850000;
        color: white;
    }
</style>
<div>
    <!--navbar-->
    <div class="nnvb container mt-3 mb-3">
        <div class="row">
            <div class="itm-active col-lg-2 col-sm-12 me-2 p-1 mb-1 text-center">
                <a class="text-decoration-none" asp-controller="AddAccomplishments" asp-action="IndexRMCC" id="aactive">Accomplishment List</a>
            </div>
            <div class="itm col-lg-2 col-sm-12 me-2 p-1 mb-1 text-center">
                <a class="text-decoration-none" asp-controller="AddAccomplishments" asp-action="Create" id="inaactive">Add Accomplishment</a>
            </div>
        </div>
    </div>

    <form asp-action="Edit">
        <!--research publication-->
        <div class="container shadow mb-3" id="content">
            <div class="row shadow-sm h3 p-4 mb-1" id="title">
                Edit Publication Details
            </div>

            <div class="row shadow p-4" id="formcont">
                <!--hidden publication id-->
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="publicationId" />

                <!--PRODUCTION id-->
                <div class="row">
                    <div class="col-lg-6 col-sm-12">
                        <label asp-for="ProductionId" class="form-label">Production ID</label>
                        <select asp-for="ProductionId" class="form-control mb-3" asp-items="ViewBag.ProductionId"></select>
                    </div>
                </div>
                <!--Article/Title-->
                <div class="row">
                    <div class="col-lg-6 col-sm-12">
                        <label asp-for="ArticleTitle" class="form-label">Article/Title</label>
                        <input asp-for="ArticleTitle" class="form-control mb-3" />
                        <span asp-validation-for="ArticleTitle" class="text-danger"></span>
                    </div>
                </div>
                <!--publication date-->
                <div class="row">
                    <div class="col-lg-6 col-sm-12">
                        <label asp-for="PublicationDate" class="form-label">Date of Publication</label>
                        <input asp-for="PublicationDate" class="form-control mb-3" />
                        <span asp-validation-for="PublicationDate" class="text-danger"></span>

                    </div>
                </div>
                <!--Title of Journal Publication-->
                <div class="row">
                    <div class="col-lg-6 col-sm-12">
                        <label asp-for="JournalPubTitle" class="form-label">Title of Journal Publication</label>
                        <input asp-for="JournalPubTitle" class="form-control mb-3" />
                        <span asp-validation-for="JournalPubTitle" class="text-danger"></span>

                    </div>
                </div>
                <!--Document Type-->
                <div class="row">
                    <div class="col-lg-4 col-sm-12">
                        <label asp-for="DocumentType" class="form-label">Document Type</label>
                        <select asp-for="DocumentType" class="form-select mb-3">
                            <option value="Article">Article</option>
                            <option value="Conference Paper">Conference Paper</option>
                            <option value="Book Chapter">Book Chapter</option>
                            <option value="Book">Book</option>
                        </select>

                        <span asp-validation-for="DocumentType" class="text-danger"></span>

                    </div>
                    <!--vol no issue no-->
                    <div class="col-lg-4 col-sm-12">
                        <label asp-for="VolnoIssueNo" class="form-label">Vol. No. & Issue No.</label>
                        <input asp-for="VolnoIssueNo" class="form-control mb-3" />
                        <span asp-validation-for="VolnoIssueNo" class="text-danger"></span>

                    </div>
                    <!--IssnIsbnEssn-->
                    <div class="col-lg-4 col-sm-12">
                        <label asp-for="IssnIsbnEssn" class="form-label">ISSN/ISBN/ESSN</label>
                        <input asp-for="IssnIsbnEssn" class="form-control mb-3" />
                        <span asp-validation-for="IssnIsbnEssn" class="text-danger"></span>

                    </div>
                </div>
                <!--doi-->
                <div class="row">
                    <div class="col-lg-12 col-sm-12">
                        <label asp-for="DOI" class="form-label">DOI</label>
                        <input asp-for="DOI" class="form-control mb-3" />
                        <span asp-validation-for="DOI" class="text-danger"></span>
                    </div>
                </div>
                <!--Indicate Where the Journal is Index-->
                <div class="row">
                    <div class="col-lg-12 col-sm-12">
                        <label asp-for="IndexJournal" class="form-label">Indicate Where the Journal is Index</label>
                        <input asp-for="IndexJournal" class="form-control mb-3" />
                        <span asp-validation-for="IndexJournal" class="text-danger"></span>
                    </div>
                </div>
                <!--Supporting Documents-->
                <div class="row">
                    <div class="col-lg-12 col-sm-12">
                        <label asp-for="SuppDocs" class="form-label">Supporting Documents</label>
                        <input asp-for="SuppDocs" class="form-control mb-3" />
                        <span asp-validation-for="SuppDocs" class="text-danger"></span>
                    </div>
                </div>
                <!--link-->
                <div class="row">
                    <div class="col-lg-12 col-sm-12">
                        <label asp-for="Link" class="form-label">Link</label>
                        <input asp-for="Link" class="form-control mb-3" />
                        <span asp-validation-for="Link" class="text-danger"></span>
                    </div>
                </div>
                <!--manu-->
                <div class="row">
                    <div class="col-lg-12 col-sm-12">
                        <label asp-for="ManuscriptJournalFileName" class="form-label"></label>
                        <input asp-for="ManuscriptJournalFileName" class="form-control mb-3" />
                        <span asp-validation-for="ManuscriptJournalFileName" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <!--buttons-->
        <div class="container mt-3 mb-3">
            <div class="d-flex justify-content-end">
                <a asp-action="Index" class="new me-2 text-decoration-none text-white d-flex justify-content-center align-items-center">Cancel</a>
                <input type="button" value="Save Changes" class="ms-2" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
            </div>
        </div>
        <!--save changes modal-->
        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content rounded-4" id="bgmodal">
                    <div class="modal-body rounded-4 p-4">
                        <h2 class="text-center mb-4" id="modaltitle">Save Changes</h2>
                        <p id="content">Do you want to save the changes you made to "[Research Title]"?</p>
                        <div class="mt-4 d-flex justify-content-center align-items-center">
                            <button type="button" class="me-2" data-bs-dismiss="modal" id="modalbtn">Close</button>
                            <input type="submit" value="Save Changes" class="ms-2">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
